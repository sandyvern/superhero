<div class="panel panel-default">
  <div class="panel-heading"><%= link_to "Click Here To Generate A New Superhero", root_path %></div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @avatar %>
      </div>
      <div class="col-md-4">
        <h2>Superhero Name: <%= @hero_prefix %> <%= @hero_name %></h2>
        <h3>Superhero Power: <%= @hero_power %></h3>
        
        <h3>Your Undercover Day Job is: <%= @corp_title %></h3>
        <h3>Your Corporate Super Power is: <%= @corp_power %></h3>
        </div>
      
      <div class="col-md-4 text-center">
        <h2>Super Sidekick:</h2> <br></br>
        <%= image_tag @side_kick %>
      </div>
    </div>
  </div>
  <div class="panel-footer"><%= link_to "Create A Whole Superhero Team", home_team_path %></div>
</div>