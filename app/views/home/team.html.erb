<div class="panel panel-default">
  <div class="panel-heading gray">
    <h3 class="panel-title gray">
      <% if @team_number > 0 %>
        Your Superhero Team ...
      <% else %>
        How Many Team Members Do You Want?
      <% end %>
    </h3>
  </div>
    
  <div class="panel-body">
    
    <% if @team_number > 0 %>
      <%= render 'home/show_team' %>
    <% else %>
      <%= render 'home/create_team' %>
    <% end %>
    
  </div>
  <div class="panel-footer"><%= link_to "Generate A Single Superhero", root_path %></div>
</div>
  
